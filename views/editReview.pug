extends base

block content    
  main.main.two-col
    div
        .review-form

          h2.heading-secondary.ma-bt-lg Review Editing for #{review.tour.name}
          form.form.form-edit-review(data-id=`${JSON.stringify(review._id)}`)
            .form__group
                label.form__label(for='review') Your review
                textarea#review.form__input.form__textarea(rows="4" cols="50", required) #{review.review}
            .form__group.ma-bt-md
                label.form__label(for='rating') Rating ( / 5 )
                input#rating.form__input(type="number", name="rating", min="1", max="5", value=`${review.rating}`)
            .form__group.right.review-actions
                button.btn.btn--green Save Edit
                button(data-id=`${JSON.stringify(review._id)}`).btn.btn-reviews.btn-reviews-delete
                    span delete 
                    svg.heading-box__icon.btn-reviews-icon
                        use(xlink:href=`/img/icons.svg#icon-delete`)
    div.full-width         

            .card
                .card__header
                    .card__picture
                        .card__picture-overlay &nbsp;
                        img.card__picture-img(src=`/img/tours/${review.tour.imageCover}`, alt=`${review.tour.name}`)
                    h3.heading-tertirary
                        span= review.tour.name
                .card__details
                    h4.card__sub-heading= `${review.tour.difficulty} ${review.tour.duration}-day tour`
                    p.card__text= review.tour.summary
                    .card__data
                        svg.card__icon
                            use(xlink:href='/img/icons.svg#icon-map-pin')
                        span= review.tour.startLocation.description
                    .card__data
                        svg.card__icon
                            use(xlink:href='/img/icons.svg#icon-calendar')
                        span= review.tour.startDates[0].toLocaleString('en-us', {month: 'long', year:"numeric"})
                    .card__data
                        svg.card__icon
                            use(xlink:href='/img/icons.svg#icon-flag')
                        span=`${review.tour.locations.length} stops`
                    .card__data
                        svg.card__icon
                            use(xlink:href='/img/icons.svg#icon-user')
                        span= `${review.tour.maxGroupSize} people`
                .card__footer
                    p
                        span.card__footer-value= `$${review.tour.price}`
                        | 
                        span.card__footer-text per person
                    p.card__ratings
                        span.card__footer-value= review.tour.ratingsAverage
                        | 
                        span.card__footer-text= `rating (${review.tour.ratingsQuantity})`