header.header 
    nav.nav.nav--tours
        a.nav__el(href="/overview") All tours 
        a.nav__el(href="/about") About 
        a.nav__el(href="/become-a-guide") Guides
        a.nav__el(href="/stories") Stories
        a.nav__el(href="/contact") Contact 
    .header__logo 
        a(href="/")
            img(src='/img/logo-white.png' alt='Natours logo') 

    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Log out
            a.nav__el(href="/me") 
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
        else 
            a.nav__el(href="/login") Log in 
            // TODO
            button.nav__el.nav__el--cta Sign up 

