extends base

block content    
  main.main.two-col
    div
        .review-form

          h2.heading-secondary.ma-bt-lg New Review for #{tour.name}
          form.form.form-new-review(data-meta=`${JSON.stringify({tour: tour._id, user: user._id})}`)
            .form__group
                label.form__label(for='review') Your review
                textarea#review.form__input.form__textarea(rows="4", cols="50" , required)
            .form__group.ma-bt-md
                label.form__label(for='rating') Rating ( / 5 )
                input#rating.form__input(type="number", name="rating", min="1", max="5", value="5")
            .form__group.right.review-actions
                button.btn.btn--green Send review

    div.full-width         

            .card
                .card__header
                    .card__picture
                        .card__picture-overlay &nbsp;
                        img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
                    h3.heading-tertirary
                        span= tour.name
                .card__details
                    h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
                    p.card__text= tour.summary
                    .card__data
                        svg.card__icon
                            use(xlink:href='/img/icons.svg#icon-map-pin')
                        span= tour.startLocation.description
                    .card__data
                        svg.card__icon
                            use(xlink:href='/img/icons.svg#icon-calendar')
                        span= tour.startDates[0].toLocaleString('en-us', {month: 'long', year:"numeric"})
                    .card__data
                        svg.card__icon
                            use(xlink:href='/img/icons.svg#icon-flag')
                        span=`${tour.locations.length} stops`
                    .card__data
                        svg.card__icon
                            use(xlink:href='/img/icons.svg#icon-user')
                        span= `${tour.maxGroupSize} people`
                .card__footer
                    p
                        span.card__footer-value= `$${tour.price}`
                        | 
                        span.card__footer-text per person
                    p.card__ratings
                        span.card__footer-value= tour.ratingsAverage
                        | 
                        span.card__footer-text= `rating (${tour.ratingsQuantity})`